# Promptloop environment variables

# Database (PostgreSQL + Prisma)
#
# Matches the Prisma Accelerate snippet shape:
# - PRISMA_DATABASE_URL: Prisma Accelerate URL (starts with prisma:// or prisma+postgres://)
# - DATABASE_URL: direct Postgres URL used by Prisma tools (migrate/introspect)
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=..."
DATABASE_URL="postgresql://USER:PASSWORD@DIRECT_HOST:5432/postgres?sslmode=require"

# Optional alias (unused by this repo)
POSTGRES_URL="postgresql://USER:PASSWORD@DIRECT_HOST:5432/postgres?sslmode=require"

# Vercel AI Gateway
#
# Used by the AI SDK when model ids are in `creator/model` format.
AI_GATEWAY_API_KEY="vgw_..."

# Optional legacy (no longer used by default)
OPENAI_API_KEY="sk-..."

# NextAuth
NEXTAUTH_SECRET="replace-with-random-32+-chars"
# Recommended for OAuth callbacks (especially outside Vercel dev)
NEXTAUTH_URL="http://localhost:3000"

# OAuth providers
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
AUTH_DISCORD_ID=""
AUTH_DISCORD_SECRET=""

# Channel encryption key
# If omitted, NEXTAUTH_SECRET is used.
CHANNEL_SECRET_KEY=""

# Vercel Cron -> /api/cron/run-jobs security
CRON_SECRET="replace-with-random-16+-chars"

# Optional limits
DAILY_RUN_LIMIT="50"

# Optional scheduled runner tuning
WORKER_MAX_JOBS_PER_RUN="25"
WORKER_TIME_BUDGET_MS="250000"
WORKER_DELIVERY_MAX_RETRIES="3"
WORKER_LLM_MAX_RETRIES="2"
WORKER_LOCK_STALE_MINUTES="10"
